---
import Metadata from 'astro-travelens/Metadata.astro'

export interface Props {
  title: string
  description: string
  date: Date
  image: ImageMetadata
  tags?: string[]
}

const { title, description, date, tags, image } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='x-ua-compatible' content='ie=edge' />
    <meta name='viewport' content='width=device-width,initial-scale=1' />
    <link rel='icon' href='/favicon.ico' sizes='any' />
    <link rel='icon' href='/favicon.svg' type='image/svg+xml' />
    <link rel='apple-touch-icon' href='/apple-touch-icon.png' />
    <link rel='manifest' href='/manifest.webmanifest' />
    <link rel='sitemap' href='/sitemap-index.xml' />
    <link rel='alternate' type='application/rss+xml' title='RSS' href='/rss.xml' />
    <meta name='generator' content={Astro.generator} />
    <Metadata title={title} description={description} date={date} image={image} tags={tags} />
  </head>
  <body class='bg-neutral-100 text-gray-700 font-sans antialiased'>
    <slot />
  </body>
</html>
<script>
  import Alpine from 'alpinejs'
  import scrollTo from 'alpinejs-scroll-to'

  // window.Alpine = Alpine;
  Alpine.plugin(scrollTo)
  Alpine.start()
</script>
